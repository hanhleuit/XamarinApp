<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HelloWorld.MHChao"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hello World">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nhập họ tên" />
            <Entry x:Name="txtHoTen" Placeholder="Họ tên" />
            <Button
                Clicked="Chao_Clicked"
                HorizontalOptions="Center"
                Text="Chào" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>